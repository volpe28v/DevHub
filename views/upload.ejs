<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>DevHub</title>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=no">
    <meta name="description" content="DevHub">
    <meta name="author" content="Naoki Kodama">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script type="text/javascript" src="/javascripts/html5.js"></script>
    <![endif]-->

    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery-ui.js"></script>
    <script type="text/javascript" src="/javascripts/upload.min.js"></script>

    <link id="devhub-style" href="/stylesheets/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/upload.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
  </head>
  <body style=":
    background-color: white;
    background-attachment: fixed;
    background-position: center top;
    background-repeat:  repeat;
    padding-top: 60px;">

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="/">DevHub - uploads <span id="all_size_mb"><%= (file_info['all_size']/1024/1024).toFixed(2) %></span>MB</a>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="span12">
          <table class="table table-condensed">
            <tr><th>Image</th><th>File name</th><th class="file-size">Size (MB)</th><th></th></tr>
            <% file_info['files'].forEach(function(file){ %>
            <tr>
              <td class="file-body" data-name="/uploads/<%= file['name'] %>"></td>
              <td><a href="/uploads/<%= file['name'] %>" target="_blank"><%= file['name'] %></a></td>
              <td class="file-size"><%= (file['size']/1024/1024).toFixed(3) %></td>
              <td><i class="icon-trash delete-button" data-name="<%= file['name'] %>"></i></td>
            </tr>
            <% }); %>
          </table>
        </div>
      </div>
    </div>

  </body>
</html>


